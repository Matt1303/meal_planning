# Database configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=meal_planning

# GitHub repository containing recipe HTML files
REPO_URL=https://github.com/Matt1303/recipe_html_pages

# Application-specific parameters
TABLE_NAME=recipes
SCHEMA_NAME=meal_planning

# Define the last modified date of the recipes in the database, otherwise defaults to today
# Format: YYYY-MM-DD
LAST_MODIFIED_DATE='2025-05-12'

# Number of recipes to process (leave undefined for all recipes, or set a number for a subset)
NUM_RECIPES=

# Set to True to force update of processed_recipes table if last modified date is after LAST_MODIFIED_DATE
# Set to False to skip recipes that are already processed
FORCE_UPDATE_PROCESSED=False

# API keys (IMPORTANT: Never commit your actual API key!)
# For OpenAI: https://platform.openai.com/api-keys
# For Claude: https://console.anthropic.com/settings/keys
OPENAI_API_KEY=sk-placeholder-replace-with-your-actual-api-key

# Path to the food list file inside the container
FOOD_LIST_PATH=/app/food_list.txt
